---
export type Props = {
  name: string
  slug: string
  lang: string
}

const { name, slug, lang } = Astro.props;
const tagUrl = `/${lang}/category/${slug}/`;
---

<a href={tagUrl} tabindex="-1"
   class="text-xs text-slate-600 bg-slate-100 dark:bg-slate-800 dark:text-slate-300 inline-block px-2 py-1 mb-2 rounded-sm border-[1px] border-slate-400 dark:border-slate-600 shadow-sm">{name}</a>
